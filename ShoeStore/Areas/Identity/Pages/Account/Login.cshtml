<div class="container">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col col-xl-10">
            <div class="row g-0">
                <div class="col-md-6 col-lg-5 d-none d-md-block">
                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
                        alt="login form" class="img-fluid" style="margin-top: 8rem;" />
                </div>
                <div class="col-md-6 col-lg-7 d-flex align-items-center">
                    <div class="card-body p-4 p-lg-5 pt-lg-4 text-black">
                        <form id="account" method="post">
                            <div class="d-flex align-items-center mb-3 pb-1">
                                <!-- <i class="fa-solid fa-user-tie fa-2x me-3"></i> -->
                                <i class="fas fa-cubes fa-2x me-3" style="color: #f3804a;"></i>
                                <span class="h1 fw-bold mb-0">Log in</span>
                            </div>

                            <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Login to
                                your account</h5>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-floating mb-3">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username"
                                    aria-required="true" />
                                <label asp-for="Input.Email" class="form-label"></label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password"
                                    aria-required="true" />
                                <label asp-for="Input.Password" class="form-label"></label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div>
                                <div class="checkbox">
                                    <label asp-for="Input.RememberMe" class="form-label">
                                        <input class="form-check-input" asp-for="Input.RememberMe" />
                                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                                    </label>
                                </div>
                            </div>
                            <div class="my-4">
                                <button id="login-submit" type="submit" class="log-in-btn">Log
                                    in</button>
                            </div>
                            <div>
                                <p class="mb-2">
                                    <a id="forgot-password" asp-page="./ForgotPassword"
                                        class="small text-muted text-reset">Forgot your password?</a>
                                </p>
                                <p class="mb-4">
                                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-reset"
                                        style="color: #393f81;">Don't have an account? Register as a new
                                        user</a>
                                </p>
                                <p class="mb-0">
                                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-reset"
                                        style="color: #393f81;">Resend email
                                        confirmation</a>
                                </p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
