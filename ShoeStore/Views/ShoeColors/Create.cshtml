@model ShoeStore.Models.ShoeColor

@{
    ViewData["Title"] = "Create";
    Layout = "_AdminLayout";
}

<div class="admin-title mt-4 mb-4">
    <ion-icon name="settings-outline"></ion-icon>
    <div class="admin-title-content">
        <h5>Shoe Colors Management</h5>
        <span>This dashboard is created to manage products and invoices</span>
    </div>
</div>
<hr />
<form asp-action="Create" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="col-md-6 mx-auto">
        <div class="form-group mb-3">
            <label asp-for="FactoryPrice" class="form-label"></label>
            <input asp-for="FactoryPrice" class="form-control" />
            <span asp-validation-for="FactoryPrice" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="SalePrice" class="form-label"></label>
            <input asp-for="SalePrice" class="form-control" />
            <span asp-validation-for="SalePrice" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="ProductCode" class="form-label"></label>
            <input asp-for="ProductCode" class="form-control" />
            <span asp-validation-for="ProductCode" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label class="form-label">Upload Images</label>
            <input type="file" name="formFileCollection" accept="image/*" multiple="multiple">
            <span class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="SortOrder" class="form-label"></label>
            <input asp-for="SortOrder" class="form-control" value="1" />
            <span asp-validation-for="SortOrder" class="text-danger"></span>
        </div>
        <div class="form-group form-check mb-3">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="Active" checked="checked" /> @Html.DisplayNameFor(model =>
                model.Active)
            </label>
        </div>
        <div class="form-group mb-3">
            <label asp-for="ShoeId" class="form-label">Shoe</label>
            <select asp-for="ShoeId" class="form-select" asp-items="ViewBag.ShoeId" readonly="readonly"></select>
        </div>
        <div class="form-group mb-3">
            <label asp-for="ColorId" class="form-label">
                Color <span class="small">(or <a asp-controller="Color" asp-action="Create" target="_blank">create
                        new Color</a>)</span>
            </label>
            <select asp-for="ColorId" class="form-select" asp-items="ViewBag.ColorId"></select>
        </div>
        <div class="d-flex justify-content-center align-items-center gap-3">
            <div class="form-group">
                <input type="submit" value="Create" class="btn-save" />
            </div>
            <div>
                <a asp-action="Index" class="btn-back">Back to List</a>
            </div>
        </div>
    </div>
</form>
