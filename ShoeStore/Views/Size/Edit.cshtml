@model ShoeStore.Models.Size

@{
    ViewData["Title"] = "Edit";
    Layout = "_AdminLayout";
}

<div class="admin-title mt-4 mb-4">
    <ion-icon name="settings-outline"></ion-icon>
    <div class="admin-title-content">
        <h5>Size Management</h5>
        <span>This dashboard is created to manage products and invoices</span>
    </div>
</div>
<hr />
<form asp-action="Edit">
    <h3 class="title-option mb-4">Edit</h3>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="d-flex justify-content-center flex-column align-items-center gap-3">
        <div class="col-md-6">
            <label asp-for="Unit" class="form-label"></label>
            <input asp-for="Unit" class="form-control" />
            <span asp-validation-for="Unit" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Value" class="form-label"></label>
            <input asp-for="Value" class="form-control" />
            <span asp-validation-for="Value" class="text-danger"></span>
        </div>
    </div>
    <div class="d-flex justify-content-center align-items-center gap-3 mt-4">
        <input type="submit" value="Save" class="btn-save" />
        <a asp-action="Index" class="btn-back">Back to List</a>
    </div>
</form>
